<div class="container">
  <div class="row">
    <h3 class="text-center">Contactanos</h3>
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <%= form_for "/contacts" do |f| %>
          <div class="form-group">
            <%= f.label :nombre %>
            <%= f.text_field :nombre, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :comentario %>
            <%= f.text_area :commentario, class: 'form-control' %>
          </div>
          
          <%= f.submit 'Enviar', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>